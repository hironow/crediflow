root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json,*.{yml,yaml}}]
indent_style = space
indent_size = 2

[*.{js,ts}]
charset = utf-8
indent_style = space
indent_size = 2

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false
eclint_indent_style = unset

[Dockerfile]
indent_size = 4

[Makefile]
indent_style = tab

[*.cdc]
indent_style = space
indent_size = 4
